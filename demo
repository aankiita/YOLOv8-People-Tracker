#using CPU we are doing
from ultralytics import YOLO
import cv2
import cvzone #display all these detections
import math
from sort import *

#for videos
cap = cv2.VideoCapture("videos/people.mp4")

model=YOLO("../../YOLOweights/yolov8n.pt")

classNames = ["person", "bicycle", "car", "motorbike", "aeroplane", "bus", "train", "truck", "boat",
              "traffic light", "fire hydrant", "stop sign", "parking meter", "bench", "bird", "cat",
              "dog", "horse", "sheep", "cow", "elephant", "bear", "zebra", "giraffe", "backpack", "umbrella",
              "handbag", "tie", "suitcase", "frisbee", "skis", "snowboard", "sports ball", "kite", "baseball bat",
              "baseball glove", "skateboard", "surfboard", "tennis racket", "bottle", "wine glass", "cup",
              "fork", "knife", "spoon", "bowl", "banana", "apple", "sandwich", "orange", "broccoli",
              "carrot", "hot dog", "pizza", "donut", "cake", "chair", "sofa", "pottedplant", "bed",
              "diningtable", "toilet", "tvmonitor", "laptop", "mouse", "remote", "keyboard", "cell phone",
              "microwave", "oven", "toaster", "sink", "refrigerator", "book", "clock", "vase", "scissors",
              "teddy bear", "hair drier", "toothbrush"
              ]

mask=cv2.imread("mask.png")
#tracking
tracker=Sort(max_age=20,min_hits=3,iou_threshold=0.3)
#is limit se agge(red colour ki line road PAR) yag image m to wo count ho jyga ki kitne car ya bike hai(project-1 car counter)
#project-2 people counter mai hum 2 limit banyenge ek up matlab kitne log upar ja rhe hai or ek limitdown ki kitne log niche aa rhe hai

limitsUp=[103,161,296,161]
limitsDown=[527,489,735,489]

#humne 2 limit up banye hai to 2 list v banane padhnge ke kitne log upar ja rhe hai totalcountUp[] ,2sra kitne log niche aa rhe hai totalcountDown[]
totalCountUp=[]
totalCountDown=[]

while True:
    success,img=cap.read()
    #mask m or image m jo white common area hai bass wahi detection hoga
    imgRegion=cv2.bitwise_and(img,mask)

    imgGraphics = cv2.imread("graphics.png", cv2.IMREAD_UNCHANGED)
    img = cvzone.overlayPNG(img, imgGraphics, (730, 260,))

    results = model(imgRegion, stream=True)
    detections = np.empty((0, 5))  # rn its empty

    for r in results:
        boxes=r.boxes
        for box in boxes:

            #bounding box
            x1,y1,x2,y2=map(int, box.xyxy[0])   # force integers
            #x1, y1,x2,y2=int(x1),int(y1),int(x2),int(y2)
            # cv2.rectangle(img,(x1,y1),(x2,y2),(255,0,255),3)

            w,h = x2-x1,y2-y1

            #confidence
            conf=math.ceil((box.conf[0]*100))/100
            #print(conf)
            #class Name
            cls=int(box.cls[0])

            currentClass=classNames[cls]

            #we only have to detect the class
            if currentClass=="person" and conf>0.3:
                # t put the text on the up of the box
               # cvzone.putTextRect(img, f'{currentClass} {conf}',  (max(0, x1), max(35, y1)), scale=0.6, thickness=1,offset=3) # scale ke karan image ke upar or thickness kam hogi jo ki bhut sare objects hote hai tab helpful hota hai

                # for putting reactangle
                cvzone.cornerRect(img, (x1, y1, w, h), l=9,rt=5) #rectangle thickness=5
                currentArray=np.array([x1,y1,x2,y2,conf])
                detections=np.vstack((detections,currentArray))


    resultsTracker=tracker.update(detections)

    #it will provide 2 red lines up and down in the video
    cv2.line(img,(limitsUp[0],limitsUp[1]),(limitsUp[2],limitsUp[3]),(0,0,255),5)
    cv2.line(img, (limitsDown[0], limitsDown[1]), (limitsDown[2], limitsDown[3]), (0, 0, 255), 5)


    for result in resultsTracker:
        x1,y1,x2,y2,id=result
        #convert them into integer otherwise it will show error
        x1, y1, x2, y2 = int(x1), int(y1), int(x2), int(y2)
        print(result)
        w,h=x2-x1,y2-y1
        cvzone.cornerRect(img, (x1, y1, w, h), l=9,rt=2,colorR=(255,0,255)) #color is blue
        # scale thickness mtb box ke upar jo text aa rha ha uski thickness or scale kitna hoga
        cvzone.putTextRect(img, f' {int(id)}', (max(0, x1), max(35, y1)), scale=2, thickness=3, offset=10)



        #if the center line touch the point where the red st line then it should count the vehicles
        cx,cy=x1+w//2,y1+h//2
        cv2.circle(img,(cx,cy),5,(255,0,255),cv2.FILLED)

        #count the number of people going up
        if limitsUp[0]<cx<limitsUp[2] and limitsUp[1]-15<cy<limitsUp[1]+15:
            #totalCount+=1
            #kabhi kabhi ek hi car 2 barcount ho jati hai to hum ar skte hai if id already count dont increase count value
            if totalCountUp.count(id)==0:  #agar id phli br count ho rhi h to count mai id daal kar count ki value increment kar do
                totalCountUp.append(id)
                #whenever it detect something color change to green
                cv2.line(img, (limitsUp[0], limitsUp[1]), (limitsUp[2],limitsUp[3]), (0, 255, 0), 5)

        # count the number of people going down
        if limitsDown[0]<cx<limitsDown[2] and limitsDown[1]-15<cy<limitsDown[1]+15:
            #totalCount+=1
            #kabhi kabhi ek hi car 2 barcount ho jati hai to hum ar skte hai if id already count dont increase count value
            if totalCountDown.count(id)==0:  #agar id phli br count ho rhi h to count mai id daal kar count ki value increment kar do
                totalCountDown.append(id)
                #whenever it detect something color change to green
                cv2.line(img, (limitsDown[0], limitsDown[1]), (limitsDown[2],limitsDown[3]), (0, 255, 0), 5)



    #here totalCount is a list so we have to find length by len()
    #cvzone.putTextRect(img, f'Count: {len(totalCount)}', (50,50))

     #remove count:x and directly print count beside up arrow
    cv2.putText(img,str(len(totalCountUp)),(929,345),cv2.FONT_HERSHEY_PLAIN,5,(139,195,75),7)  #green  color text for no of  people count going up

    # remove count:x and directly print count beside down arrow
    cv2.putText(img, str(len(totalCountDown)), (1191, 345), cv2.FONT_HERSHEY_PLAIN, 5, (50, 50, 230), 7)  #red color text for no of people count going down

    # Show full video with detections
    cv2.imshow("Image", img)
    cv2.waitKey(1)
    #detect the image in that region only and show that in video
    #cv2.imshow("imgRegion",imgRegion)

    #code jab hume frame wise chlna ho matlab jab enter dabhye to ek frmae se dusre par jygi or car detect hogi
    '''
    key=cv2.waitKey(0) & 0xFF #o=wait forever
    if key==ord('q'):
        break
    elif key==13:  #13 is the enter key in ascii
        continue'''
    #jab video khul chale or khud detect kat le
    #if (cv2.waitKey(1) & 0xFF == ord('q')): break
#cap.release()
#cv2.destroyAllWindows()
